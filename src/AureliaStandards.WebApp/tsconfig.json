{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./wwwroot/dist/",
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "lib": [ "es2015", "dom" ],
    "types": [ "node" ]
  },
  "exclude": [
    "bin", "dist", "wwwroot/dist", "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}