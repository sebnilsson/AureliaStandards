{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "lib": [ "es2015", "dom" ],
    "types": [ "node" ]
  },
  "exclude": ["bin", "dist", "wwwroot/dist", "node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}